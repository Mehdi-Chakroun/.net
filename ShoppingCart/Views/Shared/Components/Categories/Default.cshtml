@model IEnumerable<Category>

<ul class="nav nav-pills nav-fill bg-success">

        @foreach (var item in Model)
        {
                <li class="nav-item">
                        <a class="nav-link text-light bg-success" asp-controller="Products" asp-action="Index" asp-route-categorySlug="@item.Slug">@item.Name</a>
                </li>
        }
</ul>